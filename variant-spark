#!/bin/bash

declare -a SPARK_PARAMS 
spark_param_index=0
if [ "$1" == "--spark" ]; then
	shift 1
	while [[ "$#" -gt 0 ]]; do
		arg="$1"
		shift 1
		if [[ "$arg" == "--" ]]; then
			break
		fi
		SPARK_PARAMS[spark_param_index]="$arg"
		((spark_param_index+=1))
	done
fi

spark-submit --class au.csiro.variantspark.cli.VariantSparkApp \
 --driver-class-path ./conf \
 "${SPARK_PARAMS[@]}" \
 target/variant-spark-0.0.1-SNAPSHOT-all.jar "$@"
